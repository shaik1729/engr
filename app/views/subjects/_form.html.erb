<%= form_with(model: subject) do |form| %>
  <% if subject.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% subject.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mt-2">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter the subject name" %>
  </div>

  <div class="field mt-2">
    <%= form.label :code, class: "form-label" %>
    <%= form.text_field :code, class: "form-control", placeholder: "Enter the subject code" %>
  </div>

  <div class="field mt-2">
    <%= form.label :regulation_id, class: "form-label" %>
    <%= form.collection_select :regulation_id, current_user.college.regulations, :id, :code, {:include_blank => ' -- Select -- '}, {:class => 'form-control slim-select'} %>
  </div>

  <div class="actions mt-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
