<%= render 'subjects/search_form', q: @q %>
<div class="card mt-3">
    <h5 class="card-header">Search Results</h5>
    <div class="card-body">
    <table class="table">
        <tbody>
            <% @subjects.each do |subject| %>
                <tr>
                <td><%= subject.name %></td>
                <td><%= subject.code %></td>
                <td><%= subject.regulation.code %></td>
                <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
                <td><%= link_to 'Delete', subject_path(subject), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate(@subjects, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    </div>
</div>
