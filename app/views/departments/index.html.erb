<%= link_to 'New Department', new_department_path, class: "btn btn-primary" %>

<div class="card mt-3">
  <h5 class="card-header">Departments</h5>
  <div class="card-body">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Short form</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.short_form %></td>
        <td><%= department.code %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>