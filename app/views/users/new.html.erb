<%= form_for User.new, url: create_user_path do |f| %>
    <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>

    <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
        <%= f.label :college_id %>
        <%= f.text_field :college_id, value: current_user.college_id %>
    </div>

    <div class="field">
        <%= f.label :role_id %>
        <%= f.collection_select :role_id, Role.all, :id, :name %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>