<!DOCTYPE html>
<html>
  <head>
    <title>ApnaCollege</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://unpkg.com/slim-select@latest/dist/slimselect.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <%= favicon_link_tag asset_path('apnacollege_logo.png') %>
    <link href="https://unpkg.com/slim-select@latest/dist/slimselect.css" rel="stylesheet"></link>
  </head>

  <body>
    <%= render 'layouts/navbar' %>

    <div class="container">
      <% if notice %>
          <%= render 'layouts/alerts' %>
      <% end %>
      <% if alert %>
          <%= render 'layouts/alerts' %>
      <% end %>
      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    <script>
      new SlimSelect({
        select: '#subjectSelectElement'
      })
      new SlimSelect({
        select: '#semesterSelectElement'
      })
      new SlimSelect({
        select: '#regulationSelectElement'
      })
      new SlimSelect({
        select: '#departmentSelectElement'
      })
      new SlimSelect({
        select: '#batchSelectElement'
      })
      new SlimSelect({
        select: '#studentSelectElement'
      })
    </script>

  </body>
</html>
