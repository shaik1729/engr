<%= link_to 'New Document', new_document_path, class: "btn btn-primary mt-4 mb-4" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Subject</th>
      <th scope="col">Title</th>
      <th scope="col">Department</th>
      <th scope="col">Regulation</th>
      <th scope="col-span-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <th scope="row">D<%= document.id %></th>
        <td><%= document.subject.name %></td>
        <td><%= document.title %></td>
        <td><%= document.department.short_form %></td>
        <td><%= document.regulation.code %></td>
        <td><%= link_to 'Download', document.file, download:'' %></td>
        <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Update', edit_document_path(document) %></td>
      </tr>       
    <% end %>
  </tbody>
</table>