<div class="card mt-4">
  <div class="card-header">
    Create Results
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">

        <div class="card mt-4">
          <div class="card-body">
            <h5 class="card-title">Bulk Upload</h5>
            <h6 class="card-subtitle mb-2 text-muted">Please Upload a CSV file with the given format. <a href="https://docs.google.com/spreadsheets/d/1nePGbUs1y2T27cc2SPa81Af8J--vvvhC/edit?usp=sharing&ouid=110741149122925696728&rtpof=true&sd=true" target="_blank">Download Format</a></h6>
            <%= render 'bulk_result_creation_form' %>
          </div>
        </div>

        <div class="card mt-4">
          <div class="card-body">
            <h5 class="card-title">New Result(Manual)</h5>
            <h6 class="card-subtitle mb-2 text-muted">For creating single result</h6>

            <%= render 'form', result: @result %>

            <%= link_to '< Back', users_path, class: "btn btn-secondary mt-4" %>   
          </div>
        </div>
      </div>
    </div>
  </div>
</div>