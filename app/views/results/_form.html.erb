<%= form_with(model: result) do |form| %>
  <% if result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
        <% result.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mt-2">
    <%= form.label :student_roll_number, class: "form-field" %>
    <%= form.collection_select :user_id, User.where('college_id = ? and role_id = 3', current_user.college.id), :id, :reg_no, {:include_blank => ' -- Select -- '}, {:class => 'form-control slim-select'} %>
  </div>

  <div class="field mt-2">
    <%= form.label :subject_id, class: "form-field" %>
    <%= form.collection_select :subject_id, current_user.college.subjects.all, :id, :subject_name, {:include_blank => ' -- Select -- '}, {:class => 'form-control slim-select'} %>
  </div>

  <div class="field mt-2">
    <%= form.label :internal_marks, class: "form-field" %>
    <%= form.text_field :internal_marks, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :external_marks, class: "form-field" %>
    <%= form.text_field :external_marks, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :total_marks, class: "form-field" %>
    <%= form.text_field :total_marks, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :result, class: "form-field" %>
    <%= form.select :result, options_for_select([['PASS', 'P'], ['FAIL','F'], ['ABSENT', 'AB']]), {:include_blank => ' -- Select -- '}, {:class => 'form-control'} %>
  </div>

  <div class="field mt-2">
    <%= form.label :credits, class: "form-field" %>
    <%= form.text_field :credits, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :grade, class: "form-field" %>
    <%= form.text_field :grade, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :regulation_id, class: "form-field" %>
    <%= form.collection_select :regulation_id, current_user.college.regulations, :id, :name, {:include_blank => ' -- Select -- '}, {:class => 'form-control slim-select'} %>
  </div>

  <div class="field mt-2">
    <%= form.label :batch_id, class: "form-field" %>
    <%= form.collection_select :batch_id, current_user.college.batches, :id, :year, {:include_blank => ' -- Select -- '}, {:class => 'form-control slim-select'} %>
  </div>

  <div class="field mt-2">
    <%= form.label :semester_id, class: "form-field" %>
    <%= form.collection_select :semester_id, Semester.all, :id, :sem, {:include_blank => ' -- Select -- '}, {:class => 'form-control slim-select'} %>
  </div>

  <div class="field mt-2">
    <%= form.label :department_id, class: "form-field" %>
    <%= form.collection_select :department_id, current_user.college.departments, :id, :name, {:include_blank => ' -- Select -- '}, {:class => 'form-control slim-select'} %>
  </div>

  <div class="actions mt-2">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
