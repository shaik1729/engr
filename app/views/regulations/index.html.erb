<%= link_to 'New Regulation', new_regulation_path, class: "btn btn-primary" %>

<div class="card mt-3">
  <h5 class="card-header">Regulations</h5>
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @regulations.each do |regulation| %>
          <tr>
            <td><%= regulation.name %></td>
            <td><%= regulation.code %></td>
            <td><%= link_to 'Edit', edit_regulation_path(regulation) %></td>
            <td><%= link_to 'Destroy', regulation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

